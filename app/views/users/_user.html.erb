<div id="<%= dom_id user %>">
  <h1>User Details</h1>
  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Email address:</strong>
    <%= user.email_address %>
  </p>

  <p>
    <strong>Allowance:</strong>
    <%= user.allowance %>
  </p>

  <p>
    <strong>Can approve time off:</strong>
    <%= user.can_approve_time_off %>
  </p>

</div>
