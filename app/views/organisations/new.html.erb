<h1>Create Account</h1>

<%= form_with model: @organisation do |f|%>
  <%= f.label :name, "Organisation name" %>
  <%= f.text_field :name %>

  <%= f.label :user_name, "Your name" %>
  <%= f.text_field :user_name %>

  <%= f.label :user_email, "Email address" %>
  <%= f.text_field :user_email %>

  <%= f.label :user_password, "Password" %>
  <%= f.text_field :user_password %>

  <%= f.label :user_password_confirmation, "Confirm password" %>
  <%= f.text_field :user_password_confirmation %>

  <%= f.submit "Sign up" %>
<% end %>


